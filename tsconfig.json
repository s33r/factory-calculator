{
    "include": [
        "**/source",
        "build.ts",
    ],
    "compilerOptions": {
        // Input
        "strict": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        // Output
        "target": "ESNext",
        "outDir": "lib",
        "declaration": true,
        "jsx": "react",
        "isolatedModules": true,
        "esModuleInterop": true,
    }
}